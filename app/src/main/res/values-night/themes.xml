<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesApp" parent="Theme.Material3.Dark.NoActionBar">
        <!--   Color for the app bar and other primary UI elements. -->
        <item name="colorPrimary">@color/primaryDark</item>
