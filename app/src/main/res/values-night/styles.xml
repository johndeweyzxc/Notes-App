<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBarTheme">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="FabTheme">
        <item name="tintMode">@color/onPrimary</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="InputTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorOnSurface">@color/onPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardItemTheme">
        <item name="android:backgroundTint">@color/primaryDark</item>
    </style>

    <style name="CardItemTextTheme">
        <item name="android:textColor">@color/onPrimary</item>
    </style>
</resources>